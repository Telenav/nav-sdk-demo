<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="enableChargingPlanning"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sc_enableCharging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="preferToChargeUponArrival"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sc_preferToChargeUponArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="planning Strategy" />

        <RadioGroup
            android:id="@+id/planning_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:paddingStart="20dp">

            <RadioButton
                android:id="@+id/rb_higherPowery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="HigherPowerChargerStrategy" />

            <RadioButton
                android:id="@+id/rb_less_detour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LessDetourStrategy" />

            <RadioButton
                android:id="@+id/rb_alter_native_Route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AlternativeRouteStrategy" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/setCurrentEnergyLevel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="setCurrentEnergyLevel (65)"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/CurrentEnergyLevel"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:max="100"
                android:min="0"
                android:progress="65"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/preferredArrivalBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="PreferredArrivalBatteryLevel (20)"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/arrivalBatteryLevel"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:max="100"
                android:min="0"
                android:progress="20"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/preferredStartChargingBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="preferredStartChargingBatteryLevel (20)"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/StartChargingBatteryLeve"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:max="100"
                android:min="0"
                android:progress="20"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/preferredStopChargingBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="preferredStopChargingBatteryLevel (80)"
                android:textColor="@color/colorVivid"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/StopChargingBatteryLevel"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:max="100"
                android:min="0"
                android:progress="80"
                android:theme="@style/MapViewActivityStyle" />

        </LinearLayout>

    </LinearLayout>
</layout>