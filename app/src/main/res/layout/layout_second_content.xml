<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="navViewModel"
            type="com.telenav.sdk.demo.main.NavSessionViewModel" />

        <variable
            name="viewModel"
            type="com.telenav.sdk.demo.main.SecondViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.telenav.map.views.TnMapView
            android:id="@+id/map_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_press_to_create_route"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_zoom" />

        <TextView
            android:id="@+id/zoom_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@{viewModel.zoomLevelLiveData}"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:text="5" />

        <Button
            android:id="@+id/navButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_navigation"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/searchEditText"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/subViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_view_btn_text"
            android:textAllCaps="false"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/searchEditText"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/cameraLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/navButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:id="@+id/iv_camera_fix"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_round_rect"
                android:elevation="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_gps_fixed_24"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cameraFollowModeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_round_rect"
                android:elevation="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Enhanced"
                android:textAllCaps="false"
                android:visibility="@{navViewModel.navigationOn?View.VISIBLE:View.GONE}" />

            <Button
                android:id="@+id/cameraRenderModeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_round_rect"
                android:elevation="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="2D"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cameraResetButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_round_rect"
                android:elevation="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Reset camera"
                android:textAllCaps="false" />

        </LinearLayout>

        <Button
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5dp"
            android:background="@drawable/edit_text_dark_bg"
            android:gravity="left|center_vertical"
            android:hint="@string/search_for_a_dest"
            android:padding="@dimen/dimens_10dp"
            android:textColorHint="@color/hint_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.telenav.sdk.demo.seekbar.ProgressSeekBar
            android:id="@+id/seekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:bsb_progress="40"
            app:bsb_second_track_color="@color/color_white"
            app:bsb_bubble_text_color="@color/navigation_time_black"
            app:bsb_show_section_mark="true"
            app:bsb_track_color="@color/seek"
            app:layout_constraintBottom_toTopOf="@+id/searchEditText"
            app:layout_constraintEnd_toStartOf="@+id/navButton"
            app:layout_constraintStart_toEndOf="@+id/navButton"
            app:layout_constraintTop_toTopOf="@+id/navButton" />

        <TextView
            android:id="@+id/current_street_direction"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/colorVivid"
            android:padding="10dp"
            android:text="@{navViewModel.currentStreetName}"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/navButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/current_street_compass_direction"
            bind:text="Current Screen" />

        <TextView
            android:id="@+id/current_street_compass_direction"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/colorVivid"
            android:padding="10dp"
            android:text="@{navViewModel.compassDirectionLiveData}"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/navButton"
            app:layout_constraintEnd_toStartOf="@id/current_street_direction"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            bind:text="NE" />

        <ImageView
            android:id="@+id/speed_limit_display"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/speed_limit_display_background"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/subViewButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/speed_limit_text"
            app:layout_constraintTop_toTopOf="@+id/speed_limit_text" />

        <TextView
            android:id="@+id/speed_limit_text"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:text="@string/speed_limit"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/speed_limit_value_text"
            app:layout_constraintEnd_toEndOf="parent"
            bind:text="SPEED\nLIMIT" />

        <TextView
            android:id="@+id/speed_limit_value_text"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_10dp"
            android:text="@{navViewModel.speedLimitLiveData}"
            android:textSize="40sp"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/subViewButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/speed_limit_text"
            bind:text="25" />

        <include
            android:id="@+id/next_direction_container"
            layout="@layout/view_next_direction_and_eta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/guide_line_navigation_details_length"
            app:layout_constraintEnd_toStartOf="@+id/guide_line_navigation_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:navViewModel="@{navViewModel}" />

        <com.telenav.sdk.ui.TnRecyclerviewNextTurn
            android:id="@+id/turn_direction_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorVivid"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/cameraLayout"
            app:layout_constraintEnd_toEndOf="@id/next_direction_container"
            app:layout_constraintStart_toStartOf="@id/next_direction_container"
            app:layout_constraintTop_toBottomOf="@id/next_direction_container"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.telenav.sdk.ui.TnJunctionView
            android:id="@+id/junction_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_navigation_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_navigation_details_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_show_roads"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_round_rect"
                android:elevation="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_alt_route"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="@color/color_vivid_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_show_roads" />

            <ImageView
                android:id="@+id/tv_request_mode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_cloud_24"
                android:background="@drawable/bg_round_rect"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.telenav.sdk.ui.TnTrafficBarView
            android:id="@+id/trafficBar"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="@{navViewModel.showNavigationDetails ?View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/speed_limit_display"
            app:layout_constraintEnd_toEndOf="@+id/layout_zoom"
            app:layout_constraintStart_toStartOf="@+id/layout_zoom"
            app:layout_constraintTop_toBottomOf="@+id/layout_zoom" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>